{
    "app_id": "PagerDuty",
    "version": "v1.0.0",
    "homepage_url": "https://bitbucket.org/dominion-ancient/mattermost-app-opsgenie",
    "display_name": "PagerDuty",
    "description": "PagerDuty cloud app for Mattermost",
    "icon": "pagerduty.png",
    "on_install": {
        "expand": {
            "app": "all"
        },
        "path": "/install"
    },
    "bindings": {
        "path": "/bindings",
        "expand": {
            "acting_user": "all",
            "oauth2_app": "all",
            "oauth2_user": "all"
        }
    },
    "requested_permissions": [
        "act_as_bot",
        "act_as_user",
        "remote_webhooks"
    ],
    "requested_locations": [
        "/command",
        "/channel_header",
        "/post_menu",
        "/in_post"
    ],
    "http": {
        "root_url": ""
    }
}
